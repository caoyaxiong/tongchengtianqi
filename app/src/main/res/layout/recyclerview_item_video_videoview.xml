<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">
    <TextView
        android:id="@+id/video_title_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="skadjajdlijsaijdiajijojjfodsjofjsdofjodsj"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginTop="18px">
        <ImageView
            android:id="@+id/recycler_item_video_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recyclerview_img"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/recycler_item_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playback_play"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/recycler_item_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="01:50"
            android:background="@drawable/video_time_shape"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px">
        <ImageView
            android:id="@+id/video_head_portrait_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/head_portrait"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/video_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jdiajoidjoaijd"
            android:textSize="30px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/video_head_portrait_img"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:id="@+id/video_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/even_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/video_comment_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25px"
            android:layout_toLeftOf="@+id/video_more_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"/>
        <ImageView
            android:id="@+id/video_comment_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:layout_toLeftOf="@+id/video_comment_name_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"/>
    </RelativeLayout>


</LinearLayout>