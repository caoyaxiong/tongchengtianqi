<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/splash_background_img"
        android:layout_width="768px"
        android:layout_height="1080px"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splash" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="#FF99999E"
        android:padding="20px">

        <TextView
            android:id="@+id/splash_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="36px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="@color/black"
            android:textSize="36px" />

    </LinearLayout>

    <ImageView
        android:id="@+id/splash_skip"
        android:layout_width="768px"
        android:layout_height="266px"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/recyclerview_img" />

</com.zhy.autolayout.AutoRelativeLayout>