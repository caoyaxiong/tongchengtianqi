<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30px"
    android:paddingTop="30px">

    <TextView
        android:id="@+id/recycler_item_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:text="jdiakkddo"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_marginTop="20px">

        <TextView
            android:id="@+id/recycler_item_real_time_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时 · "
            android:textSize="20px" />

        <TextView
            android:id="@+id/recycler_item_name_text_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recycler_item_real_time_plain_text"
            android:text="haha哈哈"
            android:textSize="20px" />

        <TextView
            android:id="@+id/recycler_item_comment_text_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/recycler_item_name_text_plain_text"
            android:text="115"
            android:textSize="20px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评"
            android:textSize="20px"
            android:layout_toRightOf="@+id/recycler_item_comment_text_plain_text" />

        <TextView
            android:id="@+id/recycler_item_time_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:textSize="20px"
            android:layout_toLeftOf="@+id/recycler_item_delete_img_plain_text"
            android:layout_marginRight="10px" />

        <ImageView
            android:id="@+id/recycler_item_delete_img_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:clickable="true"/>

    </RelativeLayout>

</LinearLayout>